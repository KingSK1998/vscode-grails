<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Suppress Logback internal status messages -->
  <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

  <!-- Custom color and formatting converters -->
  <conversionRule conversionWord="clr"
    converterClass="ch.qos.logback.core.pattern.color.ANSIConstants" />
  <conversionRule conversionWord="wex"
    converterClass="ch.qos.logback.classic.pattern.ThrowableProxyConverter" />

  <!-- Console appender -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <withJansi>false</withJansi>
    <encoder>
      <charset>UTF-8</charset>
      <pattern>%cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) %highlight(%5p) %magenta(---) %cyan([%15.15t])
        %yellow(%-40.40logger{39}) %cyan(:) %m%n
      </pattern>
    </encoder>
  </appender>

  <!-- Rolling file appender -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/grails-language-server.log</file>
    <append>false</append>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/grails-language-server.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>14</maxHistory>
    </rollingPolicy>
    <encoder>
      <charset>UTF-8</charset>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Set logging level for third-party packages -->
  <logger name="ch.qos.logback" level="ERROR" />
  <logger name="org.slf4j" level="ERROR" />
  <!--    <logger name="org.eclipse.lsp4j" level="WARN"/>-->
  <!--    <logger name="org.gradle" level="ERROR"/>-->

  <!-- Enable LSP package at DEBUG -->
  <logger name="kingsk.grails.lsp" level="DEBUG" additivity="false">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </logger>


  <!-- Root logger -->
  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>
</configuration>